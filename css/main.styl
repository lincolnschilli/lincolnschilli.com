// Variables & Mixins
background_color = white

fit()
	width 100%
	max-width 1024px

build_chilli(n, w, d, x, y)
	{'#chilli-' + n}
		width w
		padding-bottom w*2.7
		transform rotate( d deg)
		bottom y
		left x

// Styles
header
	position relative
	width 100%
	overflow hidden

	#header-wrapper
		fit()
		position relative
		margin auto
		border 1px solid background_color

		#logo
			height 0
			margin-top 5%
			margin-bottom 5%
			padding-bottom 30%
			background-repeat no-repeat
			background-position center
			background-size contain
			background-image url('../img/logo.svg')

		.chilli
			position absolute
			background-repeat no-repeat
			background-position center
			background-size contain
			background-image url('../img/chilli.svg')

		build_chilli(1, 20%, 0, 0, 0)

#apps-ribbon
	display block
	width 100%
	color white
	text-align center
	background black