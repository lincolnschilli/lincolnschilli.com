// Variables & Mixins
social_links_dimension = 8%

fit()
	width 100%
	max-width 1024px

build_chilli(n, w, d, x, y)
	{'#chilli-' + n}
		width w
		padding-bottom w*2.7
		-webkit-transform rotate( d deg) /* Ch, Saf  */
		-moz-transform rotate( d deg) /* Fx <16 */
		-ms-transform rotate( d deg) /* IE 9 */
		-o-transform rotate( d deg) /* Op <12.1 */
		transform rotate( d deg)
		bottom y
		left x

	// DEBUG
	/*{'#chilli-' + n}:after
		content '' + n*/

// Styles
body
	background #fffafa

header
	position relative
	width 100%
	background-color white
	overflow hidden

	#header-wrapper
		fit()
		position relative
		margin auto
		border 1px solid white

		#logo
			height 0
			margin-top 3%
			margin-bottom 3%
			padding-bottom 25%
			background-repeat no-repeat
			background-position center
			background-size contain
			background-image url('../img/logo-fallback.png')
			background-image url('../img/logo.svg'), none

		#social-links
			text-align center

			.social-link
				margin 1%
				display inline-block
				height 0
				width social_links_dimension
				text-indent 100%
				white-space nowrap
				overflow hidden
				padding-bottom social_links_dimension
				background-repeat no-repeat
				background-position center
				background-size contain

			#twitter
				background-image url('../img/twitter.png')

			#facebook
				background-image url('../img/facebook.png')

			#android
				width social_links_dimension*2.85
				background-image url('https://developer.android.com/images/brand/en_generic_rgb_wo_60.png')

		.chilli
			position absolute
			background-repeat no-repeat
			background-position center
			background-size contain
			background-image url('../img/chilli-fallback.png')
			background-image url('../img/chilli.svg'), none
			pointer-events none

		build_chilli(1, 30%, 0, 5%, -65%)
		build_chilli(2, 10%, -50, -0.5%, -30%)
		build_chilli(3, 5%, -35, -0.5%, 22%)
		build_chilli(4, 3.5%, -180, 4%, 47%)
		build_chilli(5, 3.75%, 9, 6%, 70%)
		build_chilli(6, 12%, 13, -10%, 13%)
		build_chilli(7, 10%, 40, 2.5%, 70%)
		build_chilli(8, 10%, -165, -13%, 65%)
		build_chilli(9, 10%, -235, -15%, -35%)
		build_chilli(10, 4%, -180, -16.5%, 20%)
		build_chilli(11, 13%, 40, -35%, -12%)
		build_chilli(12, 8%, 18, -15.5%, 80%)
		build_chilli(13, 15%, 130, -37.5%, 66%)
		build_chilli(14, 10%, -90, -35%, 37%)
		build_chilli(15, 13%, -40, -26%, -56.5%)
		build_chilli(16, 40%, -60, 90%, -140%)

#ribbon
	display block
	width 100%
	height 50px
	line-height 50px
	font-size 35px
	color white
	text-align center
	background black

#apps

	.app-info
		border 1px solid #bbb
		border-bottom 0
		padding 2.5%

		.app-icon
			width 100%
			height auto
			padding 3%
			border 1px solid #ccc
			border-radius 6px

		h1
			margin-top 0

		&:nth-child(2n-1)
			background-color white

		&:nth-child(2n)
			background-color #efefef

		&:last-child
			border-bottom 1px solid #bbb
			text-align center
